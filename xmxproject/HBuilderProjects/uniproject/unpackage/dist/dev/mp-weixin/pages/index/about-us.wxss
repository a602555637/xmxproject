
.wrap ._ul {
      width: 90%;
      height: 90%;
      position: absolute;
      left: 50%;
      margin-left: -45%;
      top: 50%;
      margin-top: -45%;
      border-radius: 50%;
      overflow: hidden;
      background: #166dab;
      -webkit-box-shadow: 0px 0px 12px 2px #152c3c;
              box-shadow: 0px 0px 12px 2px #152c3c;
}
.wrap ._ul ._li:nth-child(1) {
      position: absolute;
      left: 50%;
      margin-left: -90px;
      -webkit-transform: rotate(30deg);
          -ms-transform: rotate(30deg);
              transform: rotate(30deg);
      -webkit-transform-origin: center 315px 10px;
          -ms-transform-origin: center 315px 10px;
              transform-origin: center 315px 10px;
}
    
    /*  依次类推到第12个... */
.wrap ._ul ._li:nth-child(odd):after {
      content: '';
      display: block;
      width: 0;
      height: 0;
      border-left: 89px solid transparent;
      border-right: 89px solid transparent;
      border-top: 308px solid #1b7b54;
}

