<view><block wx:for="{{orderList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="container"><view data-event-opts="{{[['tap',[['bindDetail',['$0'],[[['orderList','',index,'orderStatus']]]]]]]}}" class="container-left" bindtap="__e"><text class="phone-info">{{item.phone.brand+item.phone.model+item.phone.colour}}</text><block wx:if="{{item.serviceMode==0}}"><text class="repair-type">上门维修</text></block><block wx:else><text class="repair-type">到店维修</text></block></view><block wx:if="{{item.orderStatus==0}}"><view data-event-opts="{{[['tap',[['bindDetail',['$0'],[[['orderList','',index,'orderStatus']]]]]]]}}" class="container-button" bindtap="__e">{{buttonSubmit}}</view></block><block wx:else><block wx:if="{{item.orderStatus==4}}"><view data-event-opts="{{[['tap',[['onCancel',['$event']]]]]}}" class="container-button button-background" bindtap="__e">{{buttonCancel}}</view></block><block wx:else><view class="container-right"><text class="price">{{item.price+"元"}}</text><block wx:if="{{item.orderStatus==2}}"><text class="status finished">已完成</text></block><block wx:else><block wx:if="{{item.orderStatus==3}}"><text class="status cancel">已取消</text></block><block wx:else><block wx:if="{{item.orderStatus==1}}"><text class="status repairing">维修中</text></block><block wx:else><text class="status todo">待处理</text></block></block></block></view></block></block></view></block></view>